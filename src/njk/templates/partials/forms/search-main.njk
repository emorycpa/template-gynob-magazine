<form class="form-inline header-search">

    <div class="input-group">
        
        {# Search toggle #}
        <div class="input-group-append">
            <button 
                id="search-toggle"
                class="btn btn-primary header-search__toggle d-none"
                type="button"
                aria-label="Toggle search"
                title="Toggle search">
            </button>
        </div>

        {# Search input box #}
        <input
            id="search-input"
            type="text"
            class="form-control header-search__input"
            placeholder="Enter keywords..."
            aria-label="Enter keywords"/>

        {# Search submit #}
        <div class="input-group-append">
            <input
                id="search-submit"
                type="submit"
                name="search"
                aria-label="Submit search query"
                value="Search"
                class="btn btn-secondary header-search__submit"/>
        </div>

    </div>
    {# /.input-group #}

</form>