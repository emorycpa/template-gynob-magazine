{# Related articles, events, links, etc. #}
<div class="row">
    {# Left column thumbnail feed #}
    <div class="col-lg-8">
        <h2 class="h4 mt-0">Related Stories</h2>
        <div class="row">
            {% for i in range(0, 4) -%}
            <div class="col-sm-6 mb-3">
                <article>
                    <a href="#" class="img-link-outline">
                        <figure class="ratio-3by2 mb-2">
                            {{ macros.img(
                            '3by2', 
                            'ratio-content') }}
                        </figure>
                        <h1 class="body-text font-weight-bold">{{ lipsum.sentence(12) }}</h1>
                    </a>
                </article>
            </div>
            {# /.col-sm-6 #}
            {% endfor %}
        </div>
        {# /.row #}
    </div>
    {# /.col-lg-8 #}
    {# Right column text feed #}
    <div class="col-lg-4">
        <div class="row">
            <div class="col-sm-6 col-lg-12">
                <h2 class="h4 mt-0">More Articles</h2>
                <ul class="list-unstyled font-weight-bold mb-4">
                    {% for i in range(0, 2) -%}
                    <li class="mb-3"><a href="#">{{ lipsum.sentence(6,8) }}</a></li>
                    <li class="mb-3"><a href="#">{{ lipsum.sentence(11,13) }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-sm-6 col-lg-12">
                <h2 class="h4 mt-0">Events</h2>
                <ul class="list-unstyled font-weight-bold mb-4">
                    {% for i in range(0, 3) -%}
                    <li class="mb-3"><a href="#">{{ lipsum.sentence(4,8) }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {# /.row #}
    </div>
    {# /.col-lg-4 #}
</div>
{# /.row #}