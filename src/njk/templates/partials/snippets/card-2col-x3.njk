<!-- Two column Cards -->
<div class="card-deck mb-5">
    {% for i in range(0, 3) -%}
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6 order-1 order-lg-2">
                    <h3 class="h5 text-uppercase text-primary">2-col Card</h3>
                    <p class="card-text">The text is aligned to the right with an image to the left.</p>
                    <a href="#" class="btn btn-outline-secondary btn-sm">Learn More
                        <span class="fas fa-angle-double-right" aria-hidden="true"></span>
                    </a>
                </div>
                <!-- .col -->
                <div class="col-lg-6">
                    <img class="img-fluid" src="https://placehold.it/200x250" alt="Placeholder">
                    <br class="d-block d-lg-none">
                    <br class="d-block d-lg-none">
                </div>
                <!-- .col -->
            </div>
            <!-- .row -->
        </div>
        <!-- .card-body -->

    </div>
    <!-- .card -->
    {% endfor %}
</div>
<!-- .card-deck -->