<header id="siteHeader" class="site-header fixed-top">

    <nav class="navbar navbar-expand-lg">

        <!-- Emory logo navy blue square column -->
        <div class="site-header__logo-container col-2 bg-primary d-flex justify-content-center align-items-center h-100">
            <a class="navbar-brand h-100" href="#">
                {% include "partials/svg/eu-logo-shield.njk" %}
            </a>
        </div>
        <!-- .site-header__logo-container -->

        <!-- Main menus and site name -->
        <div class="col h-100">

            <div class="row h-100 justify-content-between">

                <!-- Site Name -->
                <div class="site-header__site-name-container col-10 col-md-7 d-flex flex-column justify-content-center pt-2" id="siteName">
                    {% include "partials/svg/eu-logo-text-hz.njk" %}
                    <a class="site-header__site-name py-2" href="index.html">{{ siteName }} Really Long Name</a>
                </div>
                <!-- .site-header__site-name-container -->

                <!-- Mobile nav toggler -->
                <div class="col-2 d-flex justify-content-end d-lg-none">
                    <button class="navbar-toggler d-flex flex-column align-items-center justify-content-center collapsed" type="button" data-toggle="collapse"
                        data-target=".navbar-collapse" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span>Menu</span>
                    </button>
                </div>
                <!-- .col-2 -->

                <!-- Aux nav menu -->
                <div class="site-header__aux-nav collapse navbar-collapse col-12 col-lg-5 d-lg-flex align-items-center justify-content-lg-end px-2"
                    id="auxNav">
                    <ul class="navbar-nav flex-lg-wrap">
                        {% for i in range(0, 4) -%}
                        <li class="nav-item">
                            <a class="nav-link" href="#">Item</a>
                        </li>
                        {%- endfor %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="auxDropdown">
                                Dropdown
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="auxDropdown">
                                {% for i in range(0, 4) -%}
                                <a class="dropdown-item" href="#">Dropdown Item</a>
                                {%- endfor %}
                            </div>
                            <!-- .dropdown-menu -->
                        </li>
                    </ul>
                </div>
                <!-- .col-lg-5 -->
                <!-- #auxNav -->

                <!-- Main nav menu -->
                <div class="site-header__main-nav collapse navbar-collapse col-12" id="mainNav">
                    <ul class="navbar-nav">
                        <li class="nav-item{% if pageTitle == 'Home' %} active{% endif %}">
                            <a class="nav-link" href="index.html">Home</a>
                            {% if pageTitle == 'Home' %}
                            <span class="sr-only">(current)</span>
                            {% endif %}
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="article.html" id="pagesDropdown">
                                Pages
                            </a>
                            <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                                <a class="dropdown-item{% if pageTitle == 'Article' %} active{% endif %}" href="article.html">Article</a>
                                <a class="dropdown-item{% if pageTitle == 'Biography' %} active{% endif %}" href="bio.html">Biography</a>
                                <a class="dropdown-item{% if pageTitle == 'Carousel' %} active{% endif %}" href="carousel.html">Carousel Hero</a>
                                <a class="dropdown-item{% if pageTitle == 'Carousel with Thumbnails' %} active{% endif %}" href="carousel-thumbnails.html">Carousel Hero with Thumbnails</a>
                                <a class="dropdown-item{% if pageTitle == 'Calendar' %} active{% endif %}" href="calendar.html">Calendar</a>
                                <a class="dropdown-item{% if pageTitle == 'News' %} active{% endif %}" href="news.html">News</a>
                                <a class="dropdown-item{% if pageTitle == 'Contact' %} active{% endif %}" href="contact.html">Contact Us</a>
                                <a class="dropdown-item{% if pageTitle == 'Datatable' %} active{% endif %}" href="datatable.html">Datatable</a>
                            </div>
                            <!-- .dropdown-menu -->
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="landing.html" id="layoutsDropdown">
                                Layouts
                            </a>
                            <div class="dropdown-menu" aria-labelledby="layoutsDropdown">
                                <a class="dropdown-item{% if pageTitle == 'Landing Page' %} active{% endif %}" href="landing.html">Landing Page</a>
                                <a class="dropdown-item{% if pageTitle == 'Interior Page' %} active{% endif %}" href="interior.html">Interior Page</a>
                                <a class="dropdown-item{% if pageTitle == 'Interior Page with Hero' %} active{% endif %}" href="interior-hero.html">Interior Page with Hero</a>
                                <a class="dropdown-item{% if pageTitle == 'Sidebar Page' %} active{% endif %}" href="sidebar.html">Interior Page with Sidebar</a>
                            </div>
                            <!-- .dropdown-menu -->
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="sidebar.html" id="componentsDropdown">
                                Components
                            </a>
                            <div class="dropdown-menu" aria-labelledby="componentsDropdown">
                                <a class="dropdown-item" href="sidebar.html#alt-img-row">Alternating Image Row</a>
                                <a class="dropdown-item" href="interior-hero.html#alert">Alert</a>
                                <a class="dropdown-item" href="interior.html#accordion-link">Accordion</a>
                                <a class="dropdown-item" href="interior.html#patterns">Background Patterns</a>
                                <a class="dropdown-item" href="interior.html#blockquote">Blockquote</a>
                                <a class="dropdown-item" href="interior.html#jumbo-link">Jumbo</a>
                                <a class="dropdown-item" href="landing.html#2colcards">Two column cards</a>
                                <a class="dropdown-item" href="landing.html#media-embed">Responsive Media Embed</a>
                                <a class="dropdown-item{% if pageTitle == 'WYSIWYG Kitchen sink' %} active{% endif %}" href="wysiwyg.html">WYSIWYG</a>
                                <a class="dropdown-item{% if pageTitle == 'Kitchen Sink' %} active{% endif %}" href="bootstrap-kitchensink.html">Bootstrap Kitchen Sink</a>
                            </div>
                            <!-- .dropdown-menu -->
                        </li>
                    </ul>
                    <!-- Search Form -->
                    {% include "partials/forms/search-main.njk" %}
                </div>
                <!-- .col-12 -->
                <!-- #mainNav -->

            </div>
            <!-- .row -->

        </div>
        <!-- .col -->

    </nav>

</header>