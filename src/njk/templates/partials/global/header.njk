<div id="siteHeader" class="header fixed-top">

    <nav class="navbar navbar-expand-lg" aria-label="{{ siteName }} main navigation">

        {# Emory Shield Logo #}
        <a class="header-logo" href="#">
            <img src="{{ templateIncludePath }}images/eu-logo-shield.svg" alt="Emory University Logo" class="header-logo__svg" />
        </a>

        {# Website Name #}
        <div class="header-sitename">
            <img src="{{ templateIncludePath }}images/eu-logo-text-hz.svg" alt="Emory University" class="header-sitename__svg" />
            <a class="header-sitename__title" href="index.html">{{ siteName }}</a>
        </div>

        {# Mobile nav toggler #}
        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse"
            data-target=".navbar-collapse" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
            <span>Menu</span>
        </button>

        {# Main Menus #}
        <div class="collapse navbar-collapse" id="mainNav">
            <div class="header-menus">
                
                {# Auxiliary top menu #}
                <div class="header-menus__top">
                </div>
                {# /.header-menus__top #}

                {# Main Menu bottom #}
                <div class="header-menus__bottom">
                    
                    <div class="header-nav-main">
                        {# Primary Nav #}
                        {% include "partials/global/nav-primary.njk" %}
                    </div>
                    
                    {# Search Form #}
                    {% include "partials/forms/search-main.njk" %}
                
                </div>
                {# /.header-menus__bottom #}
            </div>
            {# /.header-menus #}
        </div>
        {# /.collapse #}

    </nav>
</div>