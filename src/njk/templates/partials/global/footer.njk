            <div class="col-sm-4">
                <small>Copyright &copy;
                    <a href="#">Emory University</a>
                </small>
            </div>
            <!-- .col-sm-4 -->

            <div class="col-sm-4">
                <small>
                    <a href="#">EO/AA Statement</a> |
                    <a href="#">Copyright</a>
                </small>
